{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/ms-shop/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/ms-shop/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/ms-shop",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "invoices-ms": {
      "type": "application",
      "root": "apps/invoices-ms",
      "entryFile": "main",
      "sourceRoot": "apps/invoices-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/invoices-ms/tsconfig.app.json"
      }
    },
    "products-ms": {
      "type": "application",
      "root": "apps/products-ms",
      "entryFile": "main",
      "sourceRoot": "apps/products-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/products-ms/tsconfig.app.json"
      }
    },
    "users-ms": {
      "type": "application",
      "root": "apps/users-ms",
      "entryFile": "main",
      "sourceRoot": "apps/users-ms/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users-ms/tsconfig.app.json"
      }
    }
  }
}